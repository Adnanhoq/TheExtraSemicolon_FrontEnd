{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "types": ["node", "express", "multer"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*",
        "./.env"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}