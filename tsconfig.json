{
    "compilerOptions": {
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "strictNullChecks": true
    },
    "include": [
        "src/**/*",
        "./.env"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/**/*"
    ]
}