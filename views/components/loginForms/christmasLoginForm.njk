{% extends "../../layouts/main.njk" %}

{% block pageTitle %}
  Log In
{% endblock %}

{% block content %}
<section class="d-flex justify-content-center align-items-center" style="height: 75vh;">
  <div class="d-flex gap-5">
    <form class="form login-form d-flex flex-column gap-2" action="/login" method="post">
      <h3 class="christmas-text"><label class="m-0 p-0" for="email">Email:</label></h3>
      <input class="login-input" id="email" name="email" value="{{email}}" type="text" aria-label="email">
      <h3 class="christmas-text"><label class="m-0 p-0" for="password">Password:</label></h3>
      <input class="login-input mb-2" id="password" name="password" type="password" aria-label="password">
      <button class="login-button" id="login">Log In</button>
      {% if errormessage %}
        <div>
          <h3 class="error-message text-center text-wrap">{{ errormessage }}</h3>
        </div>
      {% endif %}
    </form>
  </div>
</section>
{% endblock %}
