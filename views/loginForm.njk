{% extends "./layouts/main.njk" %}

{% block pageTitle %}
  Log In
{% endblock %}

{% block content %}

        <div class="d-flex justify-content-center">

            <div class="login-container">


        {% if errormessage %}
            <h3>{{ errormessage }}</h3>
        {% endif %}

        <form class="form login-form" action="/login" method="post">
            <h3><label for="email">
                Email:
            </label></h3>
            <input class="login-input" id="email" name="email" value="{{email}}" type="email" aria-label="password">
            
            <h3><label for="password">
                Password:
            </label></h3>
            <input class="login-input" id="password" name="password" type="password" aria-label="password">

        </br></br>
        <button class="login-button" id="login">Log In</button>
        </form>
    </div>
</div>
{% endblock %}